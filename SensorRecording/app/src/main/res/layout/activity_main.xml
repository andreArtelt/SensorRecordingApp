<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sensorrecording.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking"
        android:id="@+id/btnWalking"
        android:clickable="true"
        android:onClick="onClickWalking"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnDownstairs"
        android:layout_alignStart="@+id/btnDownstairs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogging"
        android:id="@+id/btnRunning"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onClickRunning"
        android:layout_alignTop="@+id/btnWalking"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnExit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickExit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biking"
        android:id="@+id/btnBiking"
        android:onClick="onClickBiking"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/btnRunning"
        android:layout_alignLeft="@+id/btnRunning"
        android:layout_alignStart="@+id/btnRunning" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downstairs"
        android:id="@+id/btnDownstairs"
        android:onClick="onClickDownstairs"
        android:layout_alignTop="@+id/btnBiking"
        android:layout_toLeftOf="@+id/btnExit"
        android:layout_toStartOf="@+id/btnExit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upstairs"
        android:id="@+id/btnUpstairs"
        android:onClick="onClickUpstairs"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/btnDownstairs"
        android:layout_alignRight="@+id/btnWalking"
        android:layout_alignEnd="@+id/btnWalking" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="........................................................"
        android:id="@+id/txtStoragePath"
        android:layout_above="@+id/btnExit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sitting"
        android:id="@+id/btnSitting"
        android:layout_alignTop="@+id/btnUpstairs"
        android:layout_alignRight="@+id/btnBiking"
        android:layout_alignEnd="@+id/btnBiking"
        android:onClick="onClickSitting" />

</RelativeLayout>
